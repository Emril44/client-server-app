<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.frontend.controllers.ProductSearchController" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <HBox spacing="10" alignment="CENTER">
        <Label text="Search Products:" />
        <TextField fx:id="searchField" promptText="Enter product name or producer" />
        <Button text="Search" onAction="#handleSearch" />
    </HBox>
    <TableView fx:id="searchResultTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="groupColumn" text="Product Group" />
            <TableColumn fx:id="nameColumn" text="Product Name" />
            <TableColumn fx:id="producerColumn" text="Product Producer" />
            <TableColumn fx:id="amountColumn" text="Product Amount" />
            <TableColumn fx:id="costPerUnitColumn" text="Cost Per Unit" />
            <TableColumn fx:id="totalCostColumn" text="Total Cost" />
        </columns>
    </TableView>
</VBox>

