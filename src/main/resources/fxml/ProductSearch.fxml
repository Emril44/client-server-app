<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ComboBox?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.frontend.controllers.ProductSearchController">
    <VBox spacing="10" alignment="CENTER">
        <HBox spacing="10" alignment="CENTER">
            <Label text="Search Products:"/>
            <TextField fx:id="searchField" promptText="Enter product data"/>
            <ComboBox fx:id="criteriaChoiceBox"/>
            <Button text="Search" onAction="#searchProducts"/>
        </HBox>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn text="Product Group" fx:id="groupColumn"/>
                <TableColumn text="Product Name" fx:id="nameColumn"/>
                <TableColumn text="Product Description" fx:id="descColumn"/>
                <TableColumn text="Product Producer" fx:id="producerColumn"/>
                <TableColumn text="Product Amount" fx:id="amountColumn"/>
                <TableColumn text="Cost Per Unit" fx:id="priceColumn"/>
                <TableColumn text="Total Cost" fx:id="totalColumn"/>
            </columns>
        </TableView>
    </VBox>
</VBox>

