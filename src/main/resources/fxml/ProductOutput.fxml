<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.frontend.controllers.ProductOutputController" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <TableView fx:id="productTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="groupColumn" text="Product Group" />
            <TableColumn fx:id="nameColumn" text="Product Name" />
            <TableColumn fx:id="producerColumn" text="Product Producer" />
            <TableColumn fx:id="amountColumn" text="Product Amount" />
            <TableColumn fx:id="costPerUnitColumn" text="Cost Per Unit" />
            <TableColumn fx:id="totalCostColumn" text="Total Cost" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Total Pricing Per Group" onAction="#handleTotalPricingPerGroup" />
        <Button text="Alphabetic Product List" onAction="#handleAlphabeticProductList" />
    </HBox>
</VBox>